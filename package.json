{
  "name": "simple-playground",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "",
  "scripts": {
    "start": "better-npm-run start",
    "start:bsb": "bsb -make-world -w",
    "build": "better-npm-run build",
    "clear": "bsb -clean-world && rimraf dist lib",
    "debug": "better-npm-run debug",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix --ignore-path .gitignore .",
      "prettier --write",
      "git add"
    ]
  },
  "betterScripts": {
    "start": {
      "command": "webpack-dev-server --env=dev --profile --colors --progress",
      "env": {
        "NODE_ENV": "development",
        "HOST": "0.0.0.0",
        "PORT": 8000
      }
    },
    "build": {
      "command": "npm run clear && bsb -make-world && webpack --env=prod --progress --profile --colors",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "debug": {
      "command": "npm start",
      "env": {
        "DEBUG": "*"
      }
    }
  },
  "license": "ISC",
  "dependencies": {
    "babel-plugin-module-resolver": "^2.7.1",
    "better-npm-run": "^0.0.15",
    "es6-promise": "^4.1.1",
    "eslint-import-resolver-webpack": "^0.8.1",
    "html-webpack-plugin": "^2.29.0",
    "isomorphic-fetch": "^2.2.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "reason-react": "^0.3.4",
    "rimraf": "^2.6.1",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0",
    "webpack-notifier": "^1.5.0"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-runtime": "^6.23.0",
    "better-npm-run": "^0.0.15",
    "bs-platform": "^2.2.3",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^2.6.1",
    "husky": "^0.14.2",
    "lint-staged": "^6.0.0",
    "rimraf": "^2.6.1"
  }
}
